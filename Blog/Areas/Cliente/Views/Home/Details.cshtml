@model Blog.Models.Articulo

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<br />


<div class="container">



    <div class="card-header bg-light text-primary ml-0 row container">

        <div class="card col-12 col-md-6">
            <h4 class="text-primary">@Model.Nombre</h4>
        </div>
        <div class="card col-12 col-md-6">
            <h4 class="text-muted">@Model.FechaCreacion</h4>
        </div>
        <div class="card-body">

            <div class="col-12">

                <img src="~/@Model.UrlImagen" class="img-thumbnail mx-auto d-block" />
                <!--Html.Raw Quita caracteres html que pudieran recibirse en descripccion-->
                <p class="text-primary">@Html.Raw(Model.Descripcion)</p>

            </div>
        </div>
        <div class="card-body">

            <div class="row">

                <div class="col-12 col-md-6 pb-1">

                    <a asp-action="Index" class="btn btn-success btn-sm">Volver</a>

                </div>



            </div>



        </div>


    </div>

</div>


