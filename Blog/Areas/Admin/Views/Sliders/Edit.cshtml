@model Blog.Models.Slider

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />
<br />

<h3 class="text-center">Editar Slider</h3>


<form asp-action="Edit" enctype="multipart/form-data">


    <input type="hidden" asp-for="Id" />

    <div class="row px-2 mx-2 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-8 mt-4">

            <div class="form-group row">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-group form-check row">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Estado" /> @Html.DisplayNameFor(model => model.Estado)
                </label>
            </div>

            <div class="form-group row">
                <div class="col-4">


                    <label asp-for="UrlImagen" class="control-label"></label>


                </div>
                <div class="col-8">

                    <input type="file" accept="image/*" name="archivos" id="subidaArchivos" class="form-control" />

                </div>



            </div>




            <div class="form-group row mt-4">
                <div class="col-8 offset-4">

                    <div class="row">
                        <div class="col">

                            <button type="submit" class="btn btn-primary form-control" asp-route-id="@Model.Id">Actualizar</button>
                            &nbsp;

                        </div>
                        <div class="col">

                            <a asp-action="Index" class="btn btn-success form-control">Volver a Lista</a>

                        </div>




                    </div>


                </div>


            </div>





        </div>





        <div class="col-4 pt-3">

            <img src="~/@Model.UrlImagen" width="100%" style="border-radius:5px; border:1px solid #bbb9b9" />

        </div>





    </div>




</form>



